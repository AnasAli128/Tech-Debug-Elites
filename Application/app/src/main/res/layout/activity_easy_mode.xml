<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyMode">

    <TextView
        android:id="@+id/TxHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy Mode"
        android:textSize="25dp"
        android:background="@color/teal_200"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/TX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxHead"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        android:text="Score: "
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/TX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxHead"
        android:layout_toRightOf="@id/TX1"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="50dp"
        android:text="0"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/Circle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TX1"
        android:paddingTop="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/red_circle"
        android:onClick="Circle1"/>

    <ImageButton
        android:id="@+id/Circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Circle1"
        android:paddingTop="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/blue_circle"
        android:onClick="Circle2"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/Circle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Circle2"
        android:paddingTop="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_circle"
        android:onClick="Circle3"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/Circle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TX2"
        android:paddingTop="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/blue_circle"
        android:onClick="Circle4"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/Circle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Circle2"
        android:paddingTop="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/red_circle"
        android:onClick="Circle5"
        android:visibility="invisible"/>

</RelativeLayout>